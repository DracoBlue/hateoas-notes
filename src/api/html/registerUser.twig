{% extends "_base.twig" %}

{% block title %}Register User{% endblock %}

{% block body %}
    <h2>Register User</h2>

    <ol class="breadcrumb">
        <li><a href="{{ req.generateUrl("/") }}">Home</a></li>
        <li><a rel="up" href="{{ req.generateUrl("/users") }}">User</a></li>
        <li class="active">Register User</li>
    </ol>

    <form class="form-horizontal" action="{{ createUserUrl }}" method="POST">
        <div class="form-group">
            <label for="inputTitle" class="col-sm-2 control-label">Username</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="inputTitle" placeholder="Username" name="username">
            </div>
        </div>
        <div class="form-group">
            <label for="inputTags" class="col-sm-2 control-label">Password</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="inputTags" placeholder="Password" name="password">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Create User</button>
            </div>
        </div>
    </form>
{% endblock %}